<div class="amado-main-page-container">
    <h2 class="cart-table-title">Shopping Cart</h2>
    <div class="cart-op">
        <table class="amado-cart-table">
            <thead>
                <tr>
                    <th></th>
                    <th>name</th>
                    <th>price</th>
                    <th>quantity</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img class="item-cart-img" src="~/assets/cart1.jpg.webp" alt="cart1"></td>
                    <td><h5 class="item-cart-name">White Modern Chair</h5></td>
                    <td><sapn class="item-cart-price">$130</sapn></td>
                    <td>
                        <div class="qty-btn">
                            <span class="qty-btn-name">qty</span>
                            <button class="qty-btn-dec">-</button>
                            <span class="qty-btn-num">1</span>
                            <button class="qty-btn-inc">+</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <img class="item-cart-img" src="~/assets/cart2.jpg.webp" alt="cart1">
                    </td>
                    <td>
                        <h5 class="item-cart-name">Minimal Plant Pot</h5>
                    </td>
                    <td>
                        <sapn class="item-cart-price">$10</sapn>
                    </td>
                    <td>
                        <div class="qty-btn">
                            <span class="qty-btn-name">qty</span>
                            <button class="qty-btn-dec">-</button>
                            <span class="qty-btn-num">1</span>
                            <button class="qty-btn-inc">+</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><img class="item-cart-img" src="~/assets/cart3.jpg.webp" alt="cart1"></td>
                    <td><h5 class="item-cart-name">Minimal Plant Pot</h5></td>
                    <td><sapn class="item-cart-price">$10</sapn></td>
                    <td>
                        <div class="qty-btn">
                            <span class="qty-btn-name">qty</span>
                            <button class="qty-btn-dec">-</button>
                            <span class="qty-btn-num">1</span>
                            <button class="qty-btn-inc">+</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="cart-summ">
            <h class="cart-summ-header">Cart Total</h>
            <ul class="cart-summ-list">
                <li>
                    <span>Subtotal:</span>
                    <span>$140.00</span>
                </li>
                <li>
                    <span>Delivery:</span>
                    <span>$0.00</span>
                </li>
                <li>
                    <span>Total:</span>
                    <span>$140.00</span>
                </li>
            </ul>
            <button><a a asp-area="" asp-controller="Home" asp-action="Checkout">Checkout</a></button>
        </div>
    </div>
    <div class="footer">
        <div class="footerlist">
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">HOME</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Shop">Shop</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Cart">Cart</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Checkout">Checkout</a></li>
            </ul>
        </div>
        <div class="logofooter">
            <img src="https://preview.colorlib.com/theme/amado/img/core-img/logo2.png" alt="your photo" id="logofooter">

        </div>


    </div>
</div>